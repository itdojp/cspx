{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "cspx result schema v0.1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "tool",
    "invocation",
    "inputs",
    "status",
    "exit_code",
    "started_at",
    "finished_at",
    "duration_ms",
    "checks"
  ],
  "properties": {
    "schema_version": { "const": "0.1" },
    "tool": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "version", "git_sha"],
      "properties": {
        "name": { "type": "string" },
        "version": { "type": "string" },
        "git_sha": { "type": "string" }
      }
    },
    "invocation": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "command",
        "args",
        "format",
        "timeout_ms",
        "memory_mb",
        "parallel",
        "deterministic",
        "seed"
      ],
      "properties": {
        "command": { "type": "string" },
        "args": {
          "type": "array",
          "items": { "type": "string" }
        },
        "format": { "enum": ["json", "text"] },
        "timeout_ms": { "type": ["integer", "null"] },
        "memory_mb": { "type": ["integer", "null"] },
        "parallel": { "type": "integer", "minimum": 1 },
        "deterministic": { "type": "boolean" },
        "seed": { "type": "integer", "minimum": 0 }
      }
    },
    "inputs": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["path", "sha256"],
        "properties": {
          "path": { "type": "string" },
          "sha256": { "type": "string" }
        }
      }
    },
    "status": { "$ref": "#/$defs/status" },
    "exit_code": { "type": "integer", "minimum": 0 },
    "started_at": { "type": "string", "format": "date-time" },
    "finished_at": { "type": "string", "format": "date-time" },
    "duration_ms": { "type": "integer", "minimum": 0 },
    "metrics": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "states",
        "transitions",
        "wall_time_ms",
        "cpu_time_ms",
        "peak_rss_bytes",
        "disk_bytes",
        "states_per_sec",
        "transitions_per_sec",
        "parallelism"
      ],
      "properties": {
        "states": { "type": ["integer", "null"], "minimum": 0 },
        "transitions": { "type": ["integer", "null"], "minimum": 0 },
        "wall_time_ms": { "type": "integer", "minimum": 0 },
        "cpu_time_ms": { "type": ["integer", "null"], "minimum": 0 },
        "peak_rss_bytes": { "type": ["integer", "null"], "minimum": 0 },
        "disk_bytes": { "type": ["integer", "null"], "minimum": 0 },
        "states_per_sec": { "type": ["number", "null"], "minimum": 0 },
        "transitions_per_sec": { "type": ["number", "null"], "minimum": 0 },
        "parallelism": {
          "type": "object",
          "additionalProperties": false,
          "required": ["threads", "deterministic", "seed"],
          "properties": {
            "threads": { "type": "integer", "minimum": 1 },
            "deterministic": { "type": "boolean" },
            "seed": { "type": "integer", "minimum": 0 }
          }
        },
        "explore_hotspots": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "mode",
            "workers",
            "levels",
            "expanded_states",
            "discovered_states",
            "generated_transitions",
            "state_generation_ms",
            "state_generation_wall_ms",
            "visited_insert_ms",
            "frontier_maintenance_ms",
            "estimated_wait_ms",
            "hotspots"
          ],
          "properties": {
            "mode": {
              "enum": ["serial", "parallel", "parallel_deterministic"]
            },
            "workers": { "type": "integer", "minimum": 1 },
            "levels": { "type": "integer", "minimum": 0 },
            "expanded_states": { "type": "integer", "minimum": 0 },
            "discovered_states": { "type": "integer", "minimum": 0 },
            "generated_transitions": { "type": "integer", "minimum": 0 },
            "state_generation_ms": { "type": "integer", "minimum": 0 },
            "state_generation_wall_ms": { "type": "integer", "minimum": 0 },
            "visited_insert_ms": { "type": "integer", "minimum": 0 },
            "frontier_maintenance_ms": { "type": "integer", "minimum": 0 },
            "estimated_wait_ms": { "type": "integer", "minimum": 0 },
            "hotspots": {
              "type": "array",
              "items": {
                "type": "object",
                "additionalProperties": false,
                "required": ["priority", "phase", "time_ms", "ratio_pct"],
                "properties": {
                  "priority": { "type": "integer", "minimum": 1 },
                  "phase": { "type": "string" },
                  "time_ms": { "type": "integer", "minimum": 0 },
                  "ratio_pct": { "type": "number", "minimum": 0 }
                }
              }
            }
          }
        }
      }
    },
    "checks": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["name", "model", "target", "status"],
        "properties": {
          "name": { "type": "string" },
          "model": { "type": ["string", "null"] },
          "target": { "type": ["string", "null"] },
          "status": { "$ref": "#/$defs/status" },
          "reason": {
            "type": "object",
            "additionalProperties": false,
            "required": ["kind"],
            "properties": {
              "kind": { "$ref": "#/$defs/reason_kind" },
              "message": { "type": "string" }
            }
          },
          "counterexample": {
            "type": ["object", "null"],
            "additionalProperties": false,
            "required": ["type", "events", "is_minimized", "tags", "source_spans"],
            "properties": {
              "type": { "const": "trace" },
              "events": {
                "type": "array",
                "items": {
                  "type": "object",
                  "additionalProperties": false,
                  "required": ["label"],
                  "properties": { "label": { "type": "string" } }
                }
              },
              "is_minimized": { "type": "boolean" },
              "tags": {
                "type": "array",
                "items": { "type": "string" }
              },
              "source_spans": {
                "type": "array",
                "items": {
                  "type": "object",
                  "additionalProperties": false,
                  "required": ["path", "start_line", "start_col", "end_line", "end_col"],
                  "properties": {
                    "path": { "type": "string" },
                    "start_line": { "type": "integer", "minimum": 1 },
                    "start_col": { "type": "integer", "minimum": 1 },
                    "end_line": { "type": "integer", "minimum": 1 },
                    "end_col": { "type": "integer", "minimum": 1 }
                  }
                }
              }
            }
          },
          "stats": {
            "type": "object",
            "additionalProperties": false,
            "required": ["states", "transitions"],
            "properties": {
              "states": { "type": ["integer", "null"], "minimum": 0 },
              "transitions": { "type": ["integer", "null"], "minimum": 0 }
            }
          }
        }
      }
    }
  },
  "$defs": {
    "status": {
      "enum": ["pass", "fail", "unsupported", "timeout", "out_of_memory", "error"]
    },
    "reason_kind": {
      "enum": [
        "not_implemented",
        "unsupported_syntax",
        "invalid_input",
        "internal_error",
        "timeout",
        "out_of_memory"
      ]
    }
  }
}
