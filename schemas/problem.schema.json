{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "cspx problem schema v0.1",
  "type": "object",
  "additionalProperties": false,
  "required": ["id", "title", "run"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^P\\d{3}"
    },
    "title": { "type": "string" },
    "suite": { "enum": ["fast", "bench"] },
    "tags": {
      "type": "array",
      "items": { "type": "string" }
    },
    "timeout_ms": { "type": "integer", "minimum": 1 },
    "run": { "$ref": "#/$defs/run" }
  },
  "$defs": {
    "run": {
      "type": "object",
      "additionalProperties": false,
      "required": ["cmd"],
      "properties": {
        "cmd": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string" }
        },
        "cwd": { "type": "string" },
        "env": {
          "type": "object",
          "additionalProperties": { "type": "string" }
        },
        "timeout_ms": { "type": "integer", "minimum": 1 },
        "repeat": { "type": "integer", "minimum": 1 }
      }
    }
  }
}
